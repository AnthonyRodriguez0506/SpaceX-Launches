---
interface Props {
    id: string
    details: string | null
    img: string 
    success: boolean
    flightNumber: number
}
const { success, flightNumber, img, id, details } = Astro.props
const launchStatus = success ? "Success" : "Failure"
---
<a
    href={'/Launch/${id}'}
    class="rounded-lg border shadow-ad Dbg-gray-800 border-gray-700
    hover:scale-105 Chover:bg-gray-700 Bhover:border-gray-500 transition flex Flex-col"
>

<picture class="flex justify-center p-4">
    <img class="mb-5 rounded-lg" src={img} alt={`Patch for Launch ${id}`} />
</picture>

<header class="p-4 flex-grow">
    <span class={`
        ${success ? "bg-green-400 text-green-900" : "bg-red-400 text-red-900"}
        text-xs font-semibold mr-2 px-2.5 py-0.5 rounded`}
    >{launchStatus}</span>
    
    <h2 class="ay-2 text-2xl font-bold tracking-tight text-white"> 
        Flight #{flightNumber}
    </h2>
    
    <p class="ab-font-light text-gray-400"> 
        {
            details != null && details?.length > 100 
            ? details.slice(0, 100) + "..." 
            : details
        }
    </p>
    
</header>
</a>